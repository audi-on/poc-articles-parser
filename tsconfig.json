{
  "compilerOptions": {
    "target": "es2019",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "build",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
}
